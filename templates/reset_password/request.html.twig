{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="flex justify-center items-center min-h-screen  px-4">
    <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md">

        <h1 class="text-2xl font-bold text-center mb-4">Réinitialiser votre mot de passe</h1>

        {# Message d’erreur flash si échec de la requête #}
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="mb-4 p-4 text-sm text-red-700 bg-red-100 rounded-lg" role="alert">
                {{ flash_error }}
            </div>
        {% endfor %}

        {{ form_start(requestForm) }}

            {# Champ email #}
            <div class="mb-4">
                {{ form_label(requestForm.email, 'Adresse email', {'label_attr': {'class': 'block mb-1 text-sm font-medium'}}) }}
                {{ form_widget(requestForm.email, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'}}) }}
                {{ form_errors(requestForm.email) }}
            </div>

            <p class="text-sm text-gray-600 mb-4">
                Entrez votre adresse email. Un lien de réinitialisation vous sera envoyé si un compte est associé.
            </p>

            <button type="submit" class="w-full text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                Envoyer le lien de réinitialisation
            </button>

        {{ form_end(requestForm) }}

    </div>
</div>
{% endblock %}
